{% extends '@App/base_admin.html.twig' %}

{% block tmp_slide %}

    <!-- SLIDER -->
    <!-- Bloc Image -->
    <section id="carouselExampleIndicators" class="carousel slide d-none d-sm-block" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <!-- IMAGE 1265 X 550 -->
                <img class="d-block w-100" src="{{ asset('assets/uploads/'~home.Img2) }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <!-- IMAGE 1265 X 550 -->
                <img class="d-block w-100" src="{{ asset('assets/uploads/'~home.Img3) }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <!-- IMAGE 1265 X 550 -->
                <img class="d-block w-100" src="{{ asset('assets/uploads/'~home.Img4) }}" alt="Third slide">
            </div>
            <div class="carousel-item">
                <!-- IMAGE 1265 X 550 -->
                <img class="d-block w-100" src="{{ asset('assets/uploads/'~home.Img5) }}" alt="Fourth slide">
            </div>
        </div>
        <div class="carousel-caption d-none d-md-block caption caption2">
            <!-- texte -->
            {{ home.SlCaption }}
            <!-- BOUTONS SCROLL-->
            <a href="#article-anch" class="anch">
                <div class="button button-h">
                    <p>
                        <i class="fas fa-chevron-down"></i>
                    </p>
                </div>
            </a>
        </div>
        <!-- BOUTONS -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </section>
{% endblock %}

