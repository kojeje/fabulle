{% extends "@App/base_admin.html.twig" %}

{% block flash %}
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}

{% block form %}

    <div class="register container">
        <a id="article-anch" class="anch d-md-none d-lg-block"></a>

        {# ENTETE DU FORMULAIRE #}
        <div class="createUser_logo row">
            <div class="offset-lg-1 d-md-none d-lg-block"></div>
            <div class="statut col-md-12 col-lg-10 row">
                <h2 class="statut_it col-md-6 col-lg-4">{{ app.user.username }} !</h2>
                <div class="offset-md-2 d-md-none d-lg-block"></div>
                <p class="statut_it col-md-6 col-lg-6">
                    <span>Créez votre spectacle ! </span>
                </p>
            </div>
            <div class="offset-lg-1 d-md-block d-lg-none"></div>
        </div>


        {# FORMULAIRE #}
        {#{{ dump(formhome) }}#}
        {{ form_start(formhome, {attr: {novalidate: 'novalidate', class:'formulaire container'}}) }}

        <div class="form_container">
            <h1>Votre spectacle</h1>

            {#CHAMPS#}

            {#CORPS DE LA PAGE#}

            <div class="corps row">

                {# Titre du spectacle #}
                <h2 class="col-md-6 col-lg-3">Le titre</h2>
                <div class="field col-12 ">
                    {{ form_errors(formhome.titre) }}
                    {{ form_widget(formhome.titre, {'attr': {"class":'titre'}}) }}
                </div>
                <hr>
                <div class="offset-lg-1 d-md-none d-lg-block"></div>
                <h2 class="col-md-10 title">Texte principal</h2>
                <div class="offset-lg-1 d-md-none d-lg-block"></div>
                <div class="offset-lg-1 d-md-none d-lg-block"></div>
                <div class="textarea col-md-12">
                    {{ form_errors(formhome.text1) }}
                    {{ form_widget(formhome.text1) }}
                </div>
                <div class="offset-lg-1 d-md-none d-lg-block"></div>

                {# Séparateur#}
                <hr>

                <div id="img1" class="col-12">
                    <div class="field">
                        <p>Image principale</p>
                        {{ form_errors(formhome.img1) }}
                        {{ form_widget(formhome.img1, {'attr': {"class":'img'}}) }}
                    </div>



                    <div class="field">
                        <p>texte alternatif</p>
                        {{ form_errors(formhome.ImgAlt1) }}
                        {{ form_widget(formhome.ImgAlt1, {'attr': {"class":'alt'}}) }}

                        <p>infobulle</p>
                        {{ form_errors(formhome.img_title1) }}
                        {{ form_widget(formhome.img_title1, {'attr': {"class":'alt'}}) }}
                    </div>
                    {# Séparateur#}
                    <hr>
                </div>
            </div>
        </div>
        <!--SLIDER-->
        <div class="col-md-4 col-lg-4">
            <label for="sl_boolean">presence d'un slider photo?</label>
            <input type="checkbox" class="case" id="sl_boolean"
                   name="sl_boolean"
                   checked
                   onclick="showHideSlider()">
        </div>
        <div class="corps" id="slider">
            <H2 >SLIDER</H2>
            <div class="row" id="img-home-2">
                <div class="field col-lg-4 col-md-12">
                    <p>Image slider</p>
                    {{ form_errors(formhome.img2) }}
                    {{ form_widget(formhome.img2, {'attr': {"class":'img'}}) }}
                </div>

                <div class="offset-lg-2 d-md-none d-lg-block"></div>

                <div class="field col-12">
                    <p>texte alternatif</p>
                    {{ form_errors(formhome.ImgAlt2) }}
                    {{ form_widget(formhome.ImgAlt2, {'attr': {"class":'alt'}}) }}
                </div>

            </div>
            <div class="col-md-4 col-lg-4">
                <label for="img4-field">Autre image ?</label>
                <input type="checkbox" class="case" id="img3-home-field"
                       name="img4"
                       onclick="showHideImgHome3()">
            </div>

            <hr class="col-11">
            <div class="row" id="img-home-4">
                <div class="field col-12" id="img-home-3">
                    <p>Image slider</p>

                    {{ form_errors(formhome.img2) }}
                    {{ form_widget(formhome.img2, {'attr': {"class":'img'}}) }}

                </div>
                <div class="offset-lg-2 d-md-none d-lg-block"></div>

                <div class="field col-12">
                    <p>texte alternatif</p>
                    {{ form_errors(formhome.ImgAlt3) }}
                    {{ form_widget(formhome.ImgAlt3, {'attr': {"class":'alt'}}) }}
                </div>
                <div class="col-md-4 col-lg-4">
                    <label for="img5-field">Autre image ?</label>
                    <input type="checkbox" class="case" id="img5-field"
                           name="img5"
                           onclick="showHideImgHome4()">
                </div>

                <hr class="col-11">
            </div>
            <div class="row" id="img-home-4">
                <div class="field col-lg-4 col-12">
                    <p>Image slider</p>

                    {{ form_errors(formhome.img4) }}
                    {{ form_widget(formhome.img4, {'attr': {"class":'img'}}) }}

                </div>

                <div class="offset-lg-2 d-md-none d-lg-block"></div>
                <div class="field col-12">
                    <p>texte alternatif</p>
                    {{ form_errors(formhome.ImgAlt5) }}
                    {{ form_widget(formhome.ImgAlt5, {'attr': {"class":'alt'}}) }}

                </div>
                <div class="col-md-4 col-lg-4">
                    <label for="img6-field">Autre image ?</label>
                    <input type="checkbox" class="case" id="img6-field"
                           name="img6"
                           onclick="showHideImgHome5()">

                </div>
                <div class="field col-12">
                    <p>texte slider 3</p>
                    {{ form_errors(formhome.sl_caption) }}
                    {{ form_widget(formhome.sl_caption, {'attr': {"class":'alt'}}) }}

                </div>
                <hr class="col-11">
            </div>
        </div>


        {# VIDEO #}
        <div class="col-lg-12">
            <label for="v_boolean">presence d'un lecteur video?</label>
            <input type="checkbox" class="case" id="v_boolean" name="v_boolean" checked
                   onclick="showHideVideo()">

        </div>


        <div id="video" class="corps col-lg-12 row">

            <h1 class="col-12">Vidéo</h1>





            <p class="col-md-12 col-lg-3">code d'intégration youtube</p>
            <p class="col-md-12 col-lg-9">
                {{ form_errors(formhome.youtube) }}
                {{ form_widget(formhome.youtube) }}
        </div>

    </div>

    <div class="offset-lg-2 d-md-none d-lg-block"></div>
    <div class="corps row">
        <h2 class="field col--12 col-lg-6">
            genre
        </h2>
        <div class="field col-md-12 col-lg-3">
            {{ form_errors(formhome.genre) }}
            {{ form_widget(formhome.genre, {'attr': {"class":'genre'}}) }}

        </div>
        <div class="offset-lg-3 d-md-none d-lg-block"></div>
        <hr class="col-md-11">
        <h2 class="field col-md-12 col-lg-6">
            date de création
        </h2>
        <div class="offset-md-2 offset-lg-4"></div>
        <div class="field col-lg-4 col-md-8">
            {{ form_errors(formhome.creation_date) }}
            {{ form_widget(formhome.creation_date, {'attr': {"class":'date'}}) }}

            <div class="offset-md-2 offset-lg-4"></div>
        </div>
        <div class="offset-lg-3"></div>
        <hr class="col-11">


        <h2 class="field col-6 col-md-6">
            durée
        </h2>
        <div class="field col-md-6 col-lg-3">
            {{ form_errors(formhome.duree) }}
            {{ form_widget(formhome.duree) }}

        </div>
        <div class="offset-lg-3"></div>
        <hr class="col-md-11">

        <h2 class="field col-md-12 col-lg-12">
            ages:
        </h2>
        <p class="field col-md-6 col-lg-2">
            de
        </p>
        <div class="field col-md-6 col-lg-2">
            {{ form_errors(formhome.min_age) }}
            {{ form_widget(formhome.min_age) }}

        </div>
        <p class="field col-md-6 col-lg-2">
            à
        </p>
        <div class="field col-md-6 col-lg-2">
            {{ form_errors(formhome.max_age) }}
            {{ form_widget(formhome.max_age) }}

        </div>
        <hr class="col-md-11">
        <h2 class="field col-md-12 col-lg-12">
            nombre d'artistes:
        </h2>
        <p class="field col-md-6 col-lg-2">
            de
        </p>
        <div class="field col-md-6 col-lg-2">
            {{ form_errors(formhome.min_artist) }}
            {{ form_widget(formhome.min_artist) }}

        </div>
        <p class="field col-md-6 col-lg-2">
            à
        </p>
        <div class="field col-md-6 col-lg-2">
            {{ form_errors(formhome.max_artist) }}
            {{ form_widget(formhome.max_artist) }}

        </div>
        <hr class="col-md-11">
        <h2 class="field col-6">
            Tarif:
        </h2>
        <div class="field col-6">
            {{ form_errors(formhome.tarif) }}
            {{ form_widget(formhome.tarif) }}

        </div>
        <h2 class="field col-md-12 col-lg-6">
            Fiche technique
        </h2>
        <div class="field col-md-12 col-lg-6">
            {{ form_errors(formhome.fichetek) }}
            {{ form_widget(formhome.fichetek, {'attr': {"class":'img'}}) }}

        </div>

    </div>


    <div class="row">
        <div class="offset-6"></div>
        <div class="submit col-lg-4 col-md-6 ">
            {{ form_widget(formhome.submit, { 'label': 'Publier' } ) }}
        </div>
        <div class="offset-lg-2 offset-md-none offset-lg-block"></div>
    </div>



    {{ form_end(formhome) }}


{% endblock %}


