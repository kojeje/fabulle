{% extends '@App/base_admin.html.twig' %}

{% block content %}
    <article class="bloc" id="spectacles container-fluid">
        <a id="article-anch" class="anch"></a>
        <h1 class="loop-title">A l'affiche !</h1>
        <div class="article-loop container-fluid">

            {% for leShow in leShows %}
                {% if leShow.DispoBoolean==true %}

                    <div class="show show2 show3 show-medal row">

                        <a class="row post-link" href="{{path ('admin_show_id', {'id': leShow.id}) }}">
                            <h2 class="col-12 article-h1 h1-event">
                                        <span>
                                            {{ leShow.Titre }}
                                        </span>
                            </h2>
                            <div class="offset-3"></div>
                            <div class="thumb-medal2 col-6 ">

                                <img src="{{asset ('assets/uploads/'~leShow.img1)}}" alt="{{ leShow.ImgAlt1 }}" title="{{ leShow.ImgTitle1 }}">

                            </div>
                            <div class="offset-3 "></div>
                            <div class="offset-md-2 d-none d-md-block"></div>


                            <div class="offset-md-2 d-none d-md-block"></div>

                            {#<p class="preview col-md-12">#}
                                {#{{ leShow.Text1 }}#}
                            {#</p>#}


                            <p class="info col-12">
                                 {{ leShow.Genre }}
                            </p>



                            <p class="info col-12">
                                durée: {{ leShow.duree }}.
                            </p>

                            <p class="info col-12">A partir de: {{ leShow.MinAge}} ans</p>
                            <div class="admin_container">
                                <a href="{{ path('admin_update_show',  {'id': leShow.id}) }}" class="admin_link update_link">
                                    <i class="fal fa-pen"></i>
                                </a>

                                <a href="{{ path('admin_delete_show',  {'id': leShow.id}) }}" class="admin_link delete_link">
                                    <i class="fal fa-trash"></i>
                                </a>
                            </div>
                        </a>
                    </div>
                {% endif %}
            {% endfor %}

        </div>
        <h1 class="loop-title">Ancien Spectacles</h1>
        <div class="article-loop container-fluid">

            {% for leShow in leShows %}
                {% if leShow.DispoBoolean != true %}

                    <div class="show show2 show3 show-medal row">

                        <a class="row post-link" href="{{path ('admin_show_id', {'id': leShow.id}) }}">
